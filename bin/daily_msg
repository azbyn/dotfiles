#!/usr/bin/env perl
use strict;
use warnings;
use Switch::Plain;

my $BLACK   = "\x1b[30m";
my $RED     = "\x1b[31m";
my $GREEN   = "\x1b[32m";
my $YELLOW  = "\x1b[33m";
my $BLUE    = "\x1b[34m";
my $MAGENTA = "\x1b[35m";
my $CYAN    = "\x1b[36m";
my $WHITE   = "\x1b[37m";
my $ORANGE  = "\x1b[38;5;16m";
my $RESET   = "\x1b[0m";

my $B_BLACK   = "\x1b[1;30m";
my $B_RED     = "\x1b[1;31m";
my $B_GREEN   = "\x1b[1;32m";
my $B_YELLOW  = "\x1b[1;33m";
my $B_BLUE    = "\x1b[1;34m";
my $B_MAGENTA = "\x1b[1;35m";
my $B_CYAN    = "\x1b[1;36m";
my $B_WHITE   = "\x1b[1;37m";

my @databases = qw(
    anti-jokes
    archer
    art
    ascii-art
    chucknorris
    computers
    cookie
    debian
    definitions
    disclaimer
    drugs
    education
    ethnic
    food
    fortunes
    goedel
    humorists
    kids
    knghtbrd
    law
    limericks
    linux
    linuxcookie
    literature
    love
    medicine
    men-women
    miscellaneous
    paradoxum
    people
    pets
    platitudes
    politics
    pratchett
    rickandmorty
    riddles
    science
    songs-poems
    sports
    translate-me
    wisdom
    work
    zippy
);

my $day = (localtime(time))[6];
my $db = $databases[rand @databases];
my $daymsg = "";

sswitch ($day) {
	case 1: { $daymsg = ""; }
	case 2: { $daymsg = ""; }
	case 3: { $daymsg = ""; }
	case 4: { $daymsg = ""; }
	case 5: { $daymsg = "It's Update Friday!"; }
	case 6: { $daymsg = ""; }
	case 7: { $daymsg = ""; }
}

print $BLUE, "Welcome back $ENV{USER}", $RESET, "\n";
if ($daymsg ne "") {
	print "\t", $RED, $daymsg, $RESET, "\n";
}
print "($db)\n";
#print $CYAN, "Daily message:\n", $RESET;
system("fortune -ascn 500 $db | lolcat");
